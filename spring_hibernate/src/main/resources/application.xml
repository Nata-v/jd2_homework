    <!--            <tx:method name="*"/>-->
    <!--            <tx:method name="get*" propagation="SUPPORTS" read-only="true"/>-->
    <!--        </tx:attributes>-->
    <!--    </tx:advice>-->
    <!--    <aop:config>-->
    <!--        <aop:advisor pointcut="execution(*by.nata.annotations.service.CompanyService.*(..))"-->
    <!--                     advice-ref="txAdvice"/>-->
    <!--    </aop:config>-->

    <tx:annotation-driven transaction-manager="transactionManager"/>
</beans>


